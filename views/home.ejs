    const customMessage = "Kya be lawde!";

    const modifiedText = customMessage;

    e.clipboardData.setData('text/plain', modifiedText);
    e.clipboardData.setData('text/html', modifiedText);

    e.preventDefault();
});
</script>

    </body>
    </html>